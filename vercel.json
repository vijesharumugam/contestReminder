{
    "version": 2,
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/frontend/$1"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/fetch",
            "schedule": "0 */6 * * *"
        },
        {
            "path": "/api/cron/digest",
            "schedule": "0 8 * * *"
        },
        {
            "path": "/api/cron/reminders",
            "schedule": "*/5 * * * *"
        }
    ]
}