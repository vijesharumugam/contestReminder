# ============================================
# BACKEND ENVIRONMENT VARIABLES (root .env)
# ============================================

# Database - MongoDB connection string
MONGODB_URI=mongodb://127.0.0.1:27017/contestreminder

# CLIST API - Get credentials from https://clist.by/api/v2/doc/
CLIST_USERNAME=your_clist_username
CLIST_API_KEY=your_clist_api_key

# Email Notifications - Gmail App Password (not your regular password)
# Create an App Password at: https://myaccount.google.com/apppasswords
GMAIL_USER=your_email@gmail.com
GMAIL_PASS=your_app_password

# Telegram Bot - Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Admin Email - Email address of the admin user
NEXT_PUBLIC_ADMIN_EMAIL=admin@example.com

# Server Port (optional, defaults to 5000)
PORT=5000


# ============================================
# FRONTEND ENVIRONMENT VARIABLES (frontend/.env.local)
# ============================================

# Clerk Authentication - Get from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# Clerk Routes
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Telegram Bot Username (without @)
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME=YourBotName

# Backend API URL
NEXT_PUBLIC_BACKEND_URL=http://localhost:5000

# Admin Email (same as backend)
NEXT_PUBLIC_ADMIN_EMAIL=admin@example.com
