# ============================================
# BACKEND ENVIRONMENT VARIABLES (root .env)
# ============================================

# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================
# Set to 'development' for local dev, 'production' for deployed apps
NODE_ENV=development

# ============================================
# DATABASE CONFIGURATION
# ============================================
# MongoDB connection string
# For local development: mongodb://127.0.0.1:27017/contestreminder
# For production: Use MongoDB Atlas connection string
MONGODB_URI=mongodb://127.0.0.1:27017/contestreminder

# ============================================
# CLIST API CONFIGURATION
# ============================================
# Get credentials from https://clist.by/api/v2/doc/
CLIST_USERNAME=your_clist_username
CLIST_API_KEY=your_clist_api_key



# ============================================
# TELEGRAM BOT CONFIGURATION
# ============================================
# Get token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# ============================================
# ADMIN CONFIGURATION
# ============================================
# Email address of the admin user (must match frontend)
NEXT_PUBLIC_ADMIN_EMAIL=admin@example.com

# ============================================
# SERVER CONFIGURATION
# ============================================
# Server port (optional, defaults to 5000)
PORT=5000

# For production on Render (auto-set by Render)
RENDER_EXTERNAL_URL=https://your-app.onrender.com


# ============================================
# FRONTEND ENVIRONMENT VARIABLES (frontend/.env.local)
# ============================================

# Clerk Authentication - Get from https://dashboard.clerk.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_xxx
CLERK_SECRET_KEY=sk_test_xxx

# Clerk Routes
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# Telegram Bot Username (without @)
NEXT_PUBLIC_TELEGRAM_BOT_USERNAME=YourBotName

# Backend API URL
# For development: http://localhost:5000
# For production: https://your-backend-url.onrender.com
NEXT_PUBLIC_BACKEND_URL=http://localhost:5000

# Admin Email (same as backend)
NEXT_PUBLIC_ADMIN_EMAIL=admin@example.com
